<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef ParentName="ArtableFurnitureBase">
    <defName>ChangeDresser</defName>
    <label>change dresser</label>
    <Description>Change the color of apparel.</Description>
    <ThingClass>ChangeDresser.Building_Dresser</ThingClass>
    <graphicData>
      <texPath>Furniture/ColorChangeDresser</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1, 1)</drawSize>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>40</costStuffCount>
    <CostList>
      <Steel>40</Steel>
    </CostList>
    <AltitudeLayer>Building</AltitudeLayer>
    <statBases>
      <WorkToBuild>1000</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Beauty>20</Beauty>
    </statBases>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <designationHotKey>Misc12</designationHotKey>
    <building>
      <preventDeterioration>true</preventDeterioration>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>Apparel</li>
          </categories>
          <thingDefs />
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>Apparel</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
    <castEdgeShadows>true</castEdgeShadows>
    <Size>(1,1)</Size>
    <DesignationCategory>Furniture</DesignationCategory>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,1)</interactionCellOffset>
    <surfaceType>None</surfaceType>
    <tickerType>Long</tickerType>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>ChangeMirror</defName>
    <label>change mirror</label>
    <Description>Apply makeup and cut and dye hair.</Description>
    <ThingClass>ChangeDresser.Building_ChangeMirror</ThingClass>
    <graphicData>
      <texPath>Furniture/ColorChangeDresser_mirror</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1, 1)</drawSize>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>20</costStuffCount>
    <CostList>
      <Steel>20</Steel>
    </CostList>
    <AltitudeLayer>Building</AltitudeLayer>
    <statBases>
      <WorkToBuild>1500</WorkToBuild>
      <MaxHitPoints>50</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Beauty>20</Beauty>
    </statBases>
    <CastEdgeShadows>False</CastEdgeShadows>
    <Size>(1,1)</Size>
    <DesignationCategory>Furniture</DesignationCategory>
    <Passability>Standable</Passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,1)</interactionCellOffset>
    <building>
      <canPlaceOverWall>true</canPlaceOverWall>
      <isEdifice>false</isEdifice>
    </building>
  </ThingDef>
</ThingDefs>